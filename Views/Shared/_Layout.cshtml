<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diş Kliniği Randevu Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @{
        // Kullanıcı ve roller
        var user = Context.User;
        bool isAuthenticated = user != null && user.Identity != null && user.Identity.IsAuthenticated;
        bool isAdmin = user != null && user.IsInRole("Admin");
        bool isSekreter = user != null && user.IsInRole("Sekreter");
        bool isDoktor = user != null && user.IsInRole("Doktor");
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Diş Kliniği</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @* Giriş yapmış herkes için Ana Sayfa *@
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Home"
                                   asp-action="Index">Ana Sayfa</a>
                            </li>
                        }

                        @* SADECE Admin + Sekreter için *@
                        @if (isAdmin || isSekreter)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Dentists"
                                   asp-action="Index">Doktorlar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Patients"
                                   asp-action="Index">Hastalar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Appointments"
                                   asp-action="Index">Randevular</a>
                            </li>
                        }

                        @* SADECE Doktor için *@
                        @if (isDoktor)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Appointments"
                                   asp-action="MyAppointments">Benim Randevularım</a>
                            </li>
                        }

                    </ul>

                    <ul class="navbar-nav">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">
                                    @if (user.Identity != null)
                                    {
                                        @user.Identity.Name
                                    }

                                    @if (isAdmin)
                                    {
                                        <span> (Admin)</span>
                                    }
                                    else if (isSekreter)
                                    {
                                        <span> (Sekreter)</span>
                                    }
                                    else if (isDoktor)
                                    {
                                        <span> (Doktor)</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger"
                                   asp-controller="Login"
                                   asp-action="Logout">Çıkış</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Login"
                                   asp-action="Index">Giriş</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
