@model List<randevu_sistemi.Models.Appointment>

@{
    ViewData["Title"] = "Randevular";
    var searchQuery = ViewContext.HttpContext.Request.Query["search"];
}

<h3>Randevular</h3>

<div class="d-flex justify-content-between align-items-center mb-3">

    <form method="get" class="d-flex">
        <input type="text"
               name="search"
               value="@searchQuery"
               class="form-control me-2"
               placeholder="Ara (doktor / hasta / not)" />
        <button class="btn btn-outline-secondary" type="submit">Ara</button>
    </form>

    @if (User.IsInRole("Admin") || User.IsInRole("Sekreter"))
    {
        <a asp-action="Create" class="btn btn-primary ms-3">Yeni Randevu</a>
    }

</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tarih/Saat</th>
            <th>Doktor</th>
            <th>Hasta</th>
            <th>Not</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@a.Dentist?.FullName</td>
                <td>@a.Patient?.FullName</td>
                <td>@a.Note</td>
                <td>
                    <a asp-action="Details" asp-route-id="@a.Id" class="btn btn-info btn-sm">Detay</a>

                    @if (User.IsInRole("Admin") || User.IsInRole("Sekreter"))
                    {
                        <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-danger btn-sm">Sil</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
