@model randevu_sistemi.Models.Appointment

@{
    ViewData["Title"] = "Randevu Sil";
}

<h3>Randevuyu Sil</h3>
<hr />

<div class="alert alert-warning">
    <p><strong>Tarih/Saat:</strong> @Model.DateTime.ToString("dd.MM.yyyy HH:mm")</p>
    <p><strong>Doktor:</strong> @Model.Dentist?.FullName</p>
    <p><strong>Hasta:</strong> @Model.Patient?.FullName</p>
    <p><strong>Not:</strong> @Model.Note</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
