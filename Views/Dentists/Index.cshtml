@model List<randevu_sistemi.Models.Dentist>

@{
    ViewData["Title"] = "Doktorlar";
    var searchQuery = ViewContext.HttpContext.Request.Query["search"];
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Doktorlar</h3>

    <form method="get" class="d-flex">
        <input type="text" name="search"
               value="@searchQuery"
               class="form-control me-2"
               placeholder="Ara (isim / uzmanlık)" />
        <button class="btn btn-outline-secondary" type="submit">Ara</button>
    </form>
</div>

<a asp-action="Create" class="btn btn-primary mb-3">Yeni Doktor</a>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık</th>
            <th>Telefon</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.FullName</td>
                <td>@d.Specialty</td>
                <td>@d.Phone</td>
                <td>@d.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@d.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@d.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@d.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
