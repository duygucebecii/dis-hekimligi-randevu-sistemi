@model randevu_sistemi.Models.Dentist

<h3>Doktor Detayı</h3>
<hr />

<div class="card p-3">
    <p><strong>Ad Soyad:</strong> @Model.FullName</p>
    <p><strong>Uzmanlık:</strong> @Model.Specialty</p>
    <p><strong>Telefon:</strong> @Model.Phone</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Düzenle</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
