@model List<randevu_sistemi.Models.Patient>

@{
    ViewData["Title"] = "Hastalar";
    var searchQuery = ViewContext.HttpContext.Request.Query["search"];
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Hastalar</h3>

    <form method="get" class="d-flex">
        <input type="text"
               name="search"
               value="@searchQuery"
               class="form-control me-2"
               placeholder="Ara (isim / telefon)" />
        <button class="btn btn-outline-secondary" type="submit">Ara</button>
    </form>
</div>

<a asp-action="Create" class="btn btn-primary mb-3">Yeni Hasta</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Doğum Tarihi</th>
            <th>Telefon</th>
            <th>E-mail</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.FullName</td>
                <td>@p.BirthDate.ToString("dd.MM.yyyy")</td>
                <td>@p.Phone</td>
                <td>@p.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
